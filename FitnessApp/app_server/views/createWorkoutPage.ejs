<div class="container">
    <form class="well span8">
        <div class="row">
            <div class="span3">
                <label>Exercise</label>
                <input class="span3" type="text" name="exercise">

                <label>Set</label>
                <input class="span3" type="text" name="set">

                <label>Reps/Time</label>
                <input class="span3" type="text" name="repstime">
            </div>




            <div class="span5">
                <label>Description</label>
                <textarea class="input-xlarge span5" id="message" name="description" rows="5">
        </textarea>
            </div><button class="btn btn-primary pull-right" type="submit">Add exercise</button>

            <select>
                <% Exercises.forEach(exercise => { %>
                <option value="#">
                    <%= exercise.name %>
                </option>
                </br>

                <% }); %>

            </select>



            <label>Workout Name</label>
            <input class="span3" type="text" name="repstime">
        </div><button class="btn btn-primary pull-right" type="submit">Create workout</button>
</div>
</form>
</div>